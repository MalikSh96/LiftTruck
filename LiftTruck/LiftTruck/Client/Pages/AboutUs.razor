@page "/aboutus"
@inherits AboutUsBase
<h2>AboutUs</h2>

<div class="info-section">
    <h2>Contact section</h2>
    <h4>Name: @GetName()</h4>
    <h4>Phone: @GetNumber()</h4>
    <h4>Address: @GetAddress()</h4>
</div>

<div class="history-section">
    <h2>History section</h2>
    @{string story = "this is a story";}
    <p>@SetHistory(story)</p>
</div>